{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
    "esModuleInterop": true
	},
	"include": [
    "lib/**/*.ts",
    "test/**/*.ts"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}
